using System;

namespace _25_break
{
    class Program
    {
        static void Main(string[] args)
        {
            while (true)
            {
                Console.Write("계속할까요? (예/아니요) : ");
                string answer = Console.ReadLine();

                if (answer == "아니요")
                    break;
            }
        }
    }
}
